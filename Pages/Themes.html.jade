doctype html
html.no-js(lang='en')
  head
    meta(charset='utf-8')
    title Style Guide | Scriptura Framework
    meta(name='description' content='Style Guide for Scriptura Framework')
    include ../Includes/Metas.jade
  body(itemscope itemtype='//schema.org/WebPage')
    nav.main-nav(role='navigation')
      .wrap
        input(type='checkbox', id='cmd-main-nav')
        label(for='cmd-main-nav')
          span
        .brand
          a(href='/')
            span.letter S
            span criptura
        ul
          li
            a(href='/')
              span.icon-home
              span.sizeNav-hidden Home
          li
            a(href='./StyleGuide.html')
              span.icon-list2
              | Style Guide
          li
            a(href='./Layouts.html')
              span.icon-frame
              | Layout Examples
          li
            span.active
              span.icon-rocket
              | Themes
          li.item-push
            a(href='//github.com/Scriptura/ScripturaFramework')
              span.icon-github
              | Repository
    main(itemprop='mainContentOfPage').section
      .wrap
        h1(itemprop='headline name').emphasized The Themes
        .grid
          form(method='get', action='./')
            legend.h4 Style Switcher
            div
              input#themeInitial.switch(type='radio', name='theme-demo', value='Initial')
              label(for='themeInitial') Initial
                span(data-on='yes', data-off='no')
            div
              input#themeDualColor.switch(type='radio', name='theme-demo', value='DualColor')
              label(for='themeDualColor') Dual Color
                span(data-on='yes', data-off='no')
            //-
              div
                input#themeRatatouille.switch(type='radio', name='theme-demo', value='Ratatouille')
                label(for='themeRatatouille') Ratatouille
                  span(data-on='yes', data-off='no')
            //-
              Clear your preference : default theme...
            div
              input#clearTheme.switch(type='radio', name='theme-demo', checked='')
              label(for='clearTheme') Ratatouille
                span(data-on='yes', data-off='no')
          .accordion
            h3 Eng
            .active
              p.message-info Choose a theme and then revisit the 
                a(href='/Pages/StyleGuide.html') Style Guide
                |  with new eyes...
            h3 Fr
            div(lang='fr')
              p.message-info Choisissez un th√®me puis revisitez le 
                a(href='/Pages/StyleGuide.html') Style Guide
                |  avec un nouveau regard...
    footer.section.footer
      include ../Includes/Footer.jade
    include ../Includes/Scripts.jade