mixin icon(name)
  ruby
    svg.icon(role='img' focusable='false')
      use(href='/sprites/util.svg#' + name)
    rt #{name}


.flex.gap.gap-bottom.scale200
    +icon('ampersand')
    +icon('language')
    +icon('gopuram')
    +icon('old-key')
.grid2.gap
