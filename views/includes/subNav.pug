mixin item(currentType, name, pageSlug, iconSlug)
  li
    if documentType === currentType
      .current
        svg.icon-inline(role='img' focusable='false')
          use(href='/sprites/util.svg#' + iconSlug)
        = name
    else
      a(href=pageSlug)
        svg.icon-inline(role='img' focusable='false')
          use(href='/sprites/util.svg#' + iconSlug)
        = name

button#cmd-nav.cmd-nav(type='button' aria-label='Main Menu' aria-controls='sub-nav')
  svg(viewBox='0 0 100 100')
    rect(x='5' y='20' width='90' height='6')
    rect(x='5' y='47' width='90' height='6')
    rect(x='5' y='74' width='90' height='6')
ul#sub-nav.sub-nav(aria-labelledby='cmd-nav')
  +item('components', 'Components', '/page/components.html', 'trowel-bricks')
  +item('templates', 'Templates', '/page/templates.html', 'gopuram')
  +item('grid', 'Grid systems', '/page/grids.html', 'border-none')
  +item('article', 'Sample article', '/page/article.html', 'ampersand')
  +item('forum', 'Sample forum', '/page/forum.html', 'bubbles')
  +item('imageGallery', 'Sample gallery', '/page/imageGallery.html', 'picture')
  +item('dashboard', 'Sample dashboard', '/page/dashboard.html', 'cogwheel3')
  if documentType === 'dashboard'
    li
      a(href='/page/person.html')
        .avatar(style='--img:url(/medias/images/uploads/henri-de-lubac-w300.webp)')
        | Henri de Lubac
  else
    +item('', 'Repository', '//github.com/Scriptura/scriptura.github.io', 'github')
