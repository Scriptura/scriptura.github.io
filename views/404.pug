extends patternLayout

block variables
  - const documentType = '404'
  -
    const data = {
      _name: `Erreur 404 <span>.&nbsp;page non trouvée</span>`,
      _title: `Erreur 404, page non trouvée`,
      _description: `La page demandée n'a pas été trouvée.`
    }

mixin list(icon, name, slug)
  li
    svg.icon(role='img' focusable='false')
      use(href='/sprites/util.svg#' + icon)
    a(href='/page/' + slug + '.html') #{name}

block main
  article
    header(role='banner')
      h1.main-heading!= data._name
    .grid2.s-grid1.gap
      figure.xs-center
        svg.size.xs-scale.decorative-svg.sprite-to-inline.svg-animation.invisible-if-animation(role='img' focusable='false' style='--size:35em;--xs-scale:90%')
          use(href='/sprites/silos/195v.svg#a')
      //-figure.xs-center
        svg.size.xs-scale.decorative-svg.sprite-to-inline.svg-animation.invisible-if-animation(role='img' focusable='false' style='--size:35em;--xs-scale:75%')
          use(href='/sprites/various/MonogrammeTULivreDeKellsTEST.svg#a')
      .center
        .grid
          .message-highlight
                svg.icon(role='img' focusable='false')
                  use(href='/sprites/util.svg#info')
                div
                  p La page que vous avez demandé n'existe pas ou a été supprimée.
    hr
    //-include includes/componentLinks
    h2.sr-only Voici quelques suggestions alternatives&nbsp;:
    ul.grid3.m-grid2.s-grid1.list-straight
      +list('video-play', 'Le Donjon de Naheulbeuk', 'audioShare')
      +list('video-play', 'Les Mystérieuses Cités d\'Or', 'audioShare2')
      +list('video-play', 'Chants chrétiens', 'audioShare3')
      +list('paint-roller', 'Sprites', 'sprite')
      +list('paint-roller', 'SVG sprite using CSS variables', 'sprite2')
      +list('hammer', 'Sandboxes', 'sandboxes')
      +list('hammer', 'MesseInfo API', 'messeInfoApi')
