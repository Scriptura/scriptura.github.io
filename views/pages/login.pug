extends ../patternLayout

block variables
  - const documentType = 'login'
  - const pageType = 'template'
  -
    const data = {
      _name: 'Login <span>.&nbsp;Sample login template</span>',
      _title: 'Login . Scriptura',
      _description: 'Exemple de page de connexion.'
    }

block main
  header(role='banner')
    h1.main-heading!= data._name
  .grid2.s-grid1.m-grid1.gap
    .grid.gap(style='--n: 1')
      .boxx
        form(action='/page/dashboard.html' method='post').grid.gap
          .input
            label(for='input-username') Utilisateur&nbsp;:
            input#input-username(type='text' name='username' placeholder='user' autocorrect='off' autocapitalize='off' spellcheck='false' required='required')
          .input
            label(for='input-password')  Mot de passe&nbsp;:
            input#input-password(type='password' name='password' placeholder='• • • • • • • •' required='required')
          .flex
            button.button.item-push
              svg.icon-inline(role='img' focusable='false')
                use(href='/sprites/util.svg#login')
              | Connexion
      .boxx
        p Pas encore inscrit&nbsp;?
        p
          svg.icon-inline(role='img' focusable='false')
            use(href='/sprites/util.svg#quill')
          a(href='/page/register.html') S'inscrire
    .center
      svg.size.decorative-svg(role='img' focusable='false')
        use(href='/sprites/silos/195v.svg#1')
