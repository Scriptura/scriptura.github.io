extends ../patternLayout

block variables
  - const documentType = 'register'
  - const pageType = 'template'
  -
    const data = {
      _name: 'Register <span>.&nbsp;Sample register template</span>',
      _title: 'Register . Scriptura',
      _description: 'Exemple de démonstration pour une page d\'inscription.'
    }

block main
  header(role='banner')
    h1.main-heading!= data._name
  .grid2.s-grid1.m-grid1.gap
    .grid.gap(style='--n: 1')
      .boxx
        form(action='/page/dashboard.html' method='post')
          .input
            label Créez un nom d'utilisateur
            input(type='text' name='username' placeholder='user' autocorrect='off' autocapitalize='off' spellcheck='false' required='required')
          .input
            label Créez votre mot de passe
            input(type='password' name='password' placeholder='• • • • • • • •' required='required')
          .input
            label Réentrez votre mot de passe
            input(type='password' name='password2' placeholder='• • • • • • • •' required='required')
          .flex
            button.button.item-push
              svg.icon-inline(role='img' focusable='false')
                use(href='/sprites/util.svg#quill')
              | Je m'inscris
      .boxx
        p Déjà inscrit&nbsp;?
        p
          svg.icon-inline(role='img' focusable='false')
            use(href='/sprites/util.svg#login')
          a(href='/page/login.html') Se connecter
    .center
      svg.size25.decorative-svg(role='img' focusable='false')
        use(href='/sprites/silos/195v.svg#1')
