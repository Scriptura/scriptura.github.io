{
  "name": "scriptura",
  "version": "draft",
  "type": "module",
  "description": "Un framework HTML/CSS/JS généré via Pug, Stylus et JavaScript.",
  "main": "index.js",
  "repository": "https://github.com/Scriptura/scriptura.github.io",
  "author": "Olivier Chavarin",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer-stylus": "^1.0.0",
    "browser-sync": "^2.29.3",
    "eslint": "^8.45.0",
    "image-size": "^1.0.2",
    "ora": "^6.3.1",
    "pug": "^3.0.2",
    "sharp": "^0.31.3",
    "stylus": "^0.59.0",
    "svg-symbol-sprite": "^1.4.0",
    "svgo": "^3.0.2",
    "terser": "^5.19.2"
  },
  "scripts": {
    "dev": "pnpm html | pnpm js",
    "html": "node tasks/htmlRendering",
    "js": "pnpm jsmain | pnpm jsformvalidation | pnpm jsimagefocus | pnpm jsaccordion | pnpm jscodeblock | pnpm jsrange | pnpm jslinemark | pnpm jsmap | pnpm jsyoutube | pnpm jsclienttest",
    "jsmain": "terser scripts/development/main.js scripts/development/masonry.js scripts/development/tab.js scripts/development/readablePassword.js scripts/development/pieChart.js scripts/development/barChart.js scripts/development/mediaPlayer.js -o scripts/main.js -c -m",
    "jsformvalidation": "terser scripts/development/formValidation.js -o scripts/formValidation.js -c -m",
    "jsimagefocus": "terser scripts/development/imageFocus.js -o scripts/imageFocus.js -c -m",
    "jsaccordion": "terser scripts/development/accordion.js -o scripts/accordion.js -c -m",
    "jscodeblock": "terser scripts/development/codeBlock.js -o scripts/codeBlock.js -c -m",
    "jsrange": "terser scripts/development/range.js -o scripts/range.js -c -m",
    "jslinemark": "terser scripts/development/lineMark.js -o scripts/lineMark.js -c -m",
    "jsmap": "terser scripts/development/map.js -o scripts/map.js -c -m",
    "jsyoutube": "terser scripts/development/youtube.js -o scripts/youtube.js -c -m",
    "jsclienttest": "terser scripts/development/clientTest.js -o scripts/clientTest.js -c -m",
    "css": "pnpm cssexp | pnpm cssprint | pnpm cssprism | pnpm cssmain",
    "cssmain": "stylus -u autoprefixer-stylus -w styles/development/main.styl -o styles/main.css -c -m",
    "cssexp": "stylus -u autoprefixer-stylus -w styles/development/main.styl -o styles/expanded/main.css",
    "cssprint": "stylus -u autoprefixer-stylus -w styles/development/print.styl -o styles/print.css -c -m",
    "cssgf": "stylus -u autoprefixer-stylus -w styles/development/gridFallback.styl -o styles/gridFallback.css -c -m",
    "cssprism": "stylus -u autoprefixer-stylus -w styles/development/prism.styl -o styles/prism.css -c -m",
    "img": "node tasks/images",
    "icon": "pnpm svgo && pnpm sprite && pnpm html",
    "svgo": "pnpm svgoutil && pnpm svgoplayer",
    "svgoutil": "node tasks/iconUtil && svgo --config tasks/svgoConfig.cjs -f medias/icons/utilSrc -o medias/icons/utilDest",
    "svgoplayer": "node tasks/iconPlayer && svgo --config tasks/svgoConfig.cjs -f medias/icons/playerSrc -o medias/icons/playerDest",
    "sprite": "pnpm spriteutil | pnpm spriteplayer",
    "spriteutil": "svg-symbol-sprite -p '' -a 'xmlns=\"http://www.w3.org/2000/svg\"' -s '' -c false -i medias/icons/utilDest -o sprites/util.svg",
    "spriteplayer": "svg-symbol-sprite -p '' -a 'xmlns=\"http://www.w3.org/2000/svg\"' -s '' -c false -i medias/icons/playerDest -o sprites/player.svg",
    "imglist": "node tasks/imageList",
    "bs": "browser-sync start --proxy 'scriptura.github.io.localhost' --port 9010 --reload-debounce 2000 --files 'assets' 'views' --no-notify"
  }
}
