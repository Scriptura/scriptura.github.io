{
  "name": "scriptura",
  "version": "0.2",
  "type": "module",
  "description": "Un framework HTML/CSS/JS généré avec Pug, PostCSS et JavaScript.",
  "main": "index.js",
  "repository": "https://github.com/Scriptura/scriptura.github.io",
  "author": "Olivier Chavarin",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "eslint": "^8.56.0",
    "image-size": "^1.1.0",
    "ora": "^7.0.1",
    "postcss": "^8.4.32",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-calc": "^9.0.1",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^15.1.0",
    "postcss-minify": "^1.1.0",
    "postcss-preset-env": "^9.3.0",
    "postcss-url": "^10.1.3",
    "pug": "^3.0.2",
    "sharp": "^0.33.1",
    "svg-symbol-sprite": "^1.4.1",
    "svgo": "^3.1.0",
    "terser": "^5.26.0"
  },
  "scripts": {
    "dev": "pnpm html | pnpm js",
    "html": "node tasks/htmlRendering",
    "js": "pnpm jsserviceworker | pnpm jsmain | pnpm jsformvalidation | pnpm jsimagefocus | pnpm jsaccordion | pnpm jscodeblock | pnpm jsrange | pnpm jslinemark | pnpm jsmap | pnpm jsyoutube | pnpm jsclienttest",
    "jsserviceworker": "terser scripts/development/serviceWorker.js -o sw.js --compress --mangle",
    "jsmain": "terser scripts/development/base.js scripts/development/masonry.js scripts/development/tab.js scripts/development/readablePassword.js scripts/development/pieChart.js scripts/development/barChart.js scripts/development/mediaPlayer.js -o scripts/main.js --compress --mangle",
    "jsformvalidation": "terser scripts/development/formValidation.js -o scripts/formValidation.js --compress --mangle",
    "jsimagefocus": "terser scripts/development/imageFocus.js -o scripts/imageFocus.js --compress --mangle",
    "jsaccordion": "terser scripts/development/accordion.js -o scripts/accordion.js --compress --mangle",
    "jscodeblock": "terser scripts/development/codeBlock.js -o scripts/codeBlock.js --compress --mangle",
    "jsrange": "terser scripts/development/range.js -o scripts/range.js --compress --mangle",
    "jslinemark": "terser scripts/development/lineMark.js -o scripts/lineMark.js --compress --mangle",
    "jsmap": "terser scripts/development/map.js -o scripts/map.js --compress --mangle",
    "jsyoutube": "terser scripts/development/youtube.js -o scripts/youtube.js --compress --mangle",
    "jsclienttest": "terser scripts/development/clientTest.js -o scripts/clientTest.js --compress --mangle",
    "css": "pnpm cssexp | pnpm csscom",
    "csscom": "postcss styles/development/{main,print,prism}.css --dir styles --config tasks/postcss.config.cjs --env production --watch --verbose",
    "cssexp": "postcss styles/development/{main,print,prism}.css --dir styles/expanded --config tasks/postcss.config.cjs --watch --verbose",
    "icons": "pnpm svgo && pnpm sprites && pnpm html",
    "svgo": "pnpm svgoutil && pnpm svgoplayer",
    "svgoutil": "node tasks/iconUtil && svgo --config tasks/svgoConfig.cjs -f medias/icons/utilSrc -o medias/icons/utilDest",
    "svgoplayer": "node tasks/iconPlayer && svgo --config tasks/svgoConfig.cjs -f medias/icons/playerSrc -o medias/icons/playerDest",
    "sprites": "pnpm spriteutil | pnpm spriteplayer",
    "spriteutil": "svg-symbol-sprite -p '' -a 'xmlns=\"http://www.w3.org/2000/svg\"' -s '' -c false -i medias/icons/utilDest -o sprites/util.svg",
    "spriteplayer": "svg-symbol-sprite -p '' -a 'xmlns=\"http://www.w3.org/2000/svg\"' -s '' -c false -i medias/icons/playerDest -o sprites/player.svg",
    "img": "node tasks/images",
    "imglist": "node tasks/imageList",
    "bs": "browser-sync start --proxy 'scriptura.github.io.localhost' --port 9010 --reload-debounce 2000 --files 'assets' 'views' --no-notify"
  }
}
