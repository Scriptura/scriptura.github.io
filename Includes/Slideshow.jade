.section.slideshow#slideshow1(
  data-cycle-slides='.cycle-item'
  data-cycle-timeout='6000'
  data-cycle-speed='2000'
  data-cycle-prev='#prev'
  data-cycle-next='#next'
  data-cycle-manual-fx='scrollHorz'
  data-cycle-manual-speed='300'
  )
  - var img = ['../Images/Demo/boat.jpg', '../Images/Demo/ponton.jpg', '../Images/Demo/tunel.jpg', '../Images/Demo/rose.jpg']
  - var title = ['Lorem ipsum dolor sit amet', 'Consectetur adipiscing elit', 'Aenean commodo ligula eget dolor. Aenean massa.', 'Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus.']
  - var textColor = ['#ddd', '#97B5D1', '#ddd', 'Orange']
    .cycle-pager
    - for (var i = 0; i < 4; i++)
      .cycle-item(
        style='background-image:url(' + img[i] + ')'
        )
        //- data-cycle-hash='' + title[i] + '' // Attribute for .cycle-item
        img(src='' + img[i] + '' alt='' + title[i] + '')
        .cycle-text
          div
            h2
              a(href='/' style='color:' + textColor[i] + '')= title[i]
  button#prev
    .icon-chevron-right
  button.pause(data-cycle-cmd='pause' data-cycle-context='#slideshow1')
    .icon-control-pause
  button.resume(data-cycle-cmd='resume' data-cycle-context='#slideshow1')
    .icon-control-play
  button#next
    .icon-chevron-right
