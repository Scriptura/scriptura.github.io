_progressBarColor1 = _color2
_progressBarColor2 = _colorG - 15% // rgba(255, 255, 255, .1)
_progressBarColor3 = rgba(255, 255, 255, .2)
_progressBarSize = 1em

:root
  --progressBarColor: _progressBarColor1

.progress-bar
  position relative
  height _progressBarSize
  background-color _progressBarColor2
  box-shadow inset 0 .2em .5em rgba(0, 0, 0, .2)
  border-radius round(_progressBarSize / 2, 1)
  div
  div::after
    position absolute
    border-radius round(_progressBarSize / 2, 1)
  div
    height 100%
    min-width _progressBarSize
    max-width 100%
    background-color var(--progressBarColor)
    box-shadow inset 0 2px 9px rgba(255, 255, 255, .3), inset 0 -2px 6px rgba(0, 0, 0, .4)
  div::after
    content ''
    z-index 1
    inset 0 //top 0 ; left 0 ; bottom 0 ; right 0
    background-image linear-gradient(-45deg, _progressBarColor3 25%, transparent 25%, transparent 50%, _progressBarColor3 50%, _progressBarColor3 75%, transparent 75%, transparent)
    background-size 2rem 2rem // @note Effet zoom non souhaité sur cette règle.
    animation anim-progress 1.5s linear infinite

@keyframes anim-progress
  0%
    background-position 0 0
  100%
    background-position 2rem 2rem

