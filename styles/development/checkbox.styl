_checkboxColor5 = rgba(255, 255, 255, .2)
_checkboxSize1 = 2px // @note Valeur en lien avec 'transform scale' sur le (pseudo-)élément.
_switchColor5 = rgba(255, 255, 255, .1)
_switchSize1 = 1.2em
_switchSize2 = 3px

.checkbox
  position absolute // @note Label des éléments frères décalés si déclaration en relatif.
  left -200vw
  & + label // @bugfix @affected Firefox @note Les pseudos éléments doivent impérativement partir du label et non des éléments checkbox et radio.
    position relative
    vertical-align middle
    display inline-block // @note Évite un clique involontaire de l'utilisateur sur un label doté d'un 'width100%' si définition 'block'.
    margin-left 2em
    cursor pointer
    &::before
      content ''
      display block
      position absolute
      top .1em
      left -1.8em
      width 1em
      height 1em
      box-sizing border-box // @note Nécessité de spécifier cette règle malgré sa déclaration en globale
      background-color _colorG - 30%
      border .1em solid _colorG
      outline 0 // @todo Règle à vérifier
      box-shadow inset 0 .1em .3em rgba(0, 0, 0, .3)
      border-radius 0
      cursor pointer
      transition all .2s
      transform scale(1.4)
    &::after
      content '' //'✔'
      position absolute
      top 0 // @note Fixe le pseudo-élément si label sur plusieurs lignes.
      left -1.8em
      width 1em
      height 1em
      background-color _color2
      clip-path polygon(17% 40%, 0 57%, 39% 100%, 100% 25%, 83% 10%, 38% 64%)
      transform scale(0)
      transition transform .2s

.checkbox:checked + label::after
  transform scale(1.3)

[type=radio].checkbox + label::after
  top .1em // @note Fixe le pseudo-élément si label sur plusieurs lignes.
  left -1.8em
  clip-path circle(50% at 50% 50%)

[type=radio].checkbox:checked + label::before
  border-color _color2

.checkbox:focus-visible + label::before
[type=radio].checkbox:focus-visible + label::before
  border .1rem solid _color5

[type=radio].checkbox:checked + label::after
  transform scale(.7)

[type=radio].checkbox + label::before
  border-radius 50%

.checkbox:disabled + label
  color #777
  cursor not-allowed

.checkbox:disabled + label::before
  cursor not-allowed
  background _formsColor1 repeating-linear-gradient(-45deg, transparent 0 _checkboxSize1, #555 _checkboxSize1 _checkboxSize1 * 2)


// @subsection Switchs
// -----------------------------------------------------------------------------
:root
  --switchTrue embedurl('/medias/icons/checkmark-color.svg')
  --switchFalse ''

.switch
  position absolute // @note Label des éléments frères décalés si déclaration en relatif
  left -200vw
  & + label
    position relative
    display inline-block // @note Évite une action involontaire de l'utilisateur sur un clic car le label prend la règle 'width:100%' si 'display:block'
    padding-left 'calc(%s + 1rem)' % (_switchSize1 * 2) // @note L'unité rem évite des marges trop importantes avec la classe utilitaire .zoom
    &::before
    &::after
      content ''
      position absolute
      left 0
    &::before
      height _switchSize1
      width _switchSize1 * 2
      background-color _colorG - 30%
      border .1em solid transparent
      border-radius _switchSize1
      box-shadow inset 0 .2em .5em rgba(0, 0, 0, .2)
    &::after
      top 0 // @note Fixe le pseudo-élément si label sur plusieurs lignes.
      width _switchSize1
      height _switchSize1
      color rgba(255, 255, 255, .5)
      background-color _color2
      background-repeat no-repeat
      background-size round(_switchSize1 * .6, 2) round(_switchSize1 * .6, 2)
      background-position round(_switchSize1 / 5.2, 2) round(_switchSize1 / 5.2, 2)
      border-radius 50%
      box-shadow 0 .2em .5em rgba(0, 0, 0, .3)
      transition left .2s
  &:not(:checked) + label::after
    left 0
    background-image var(--switchFalse)
    //content var(--switchFalse)
  &:checked + label::after
    left _switchSize1
    background-image var(--switchTrue)
    //filter invert(100%)
  &:focus-visible + label::before
    border-color _color5
  &:disabled + label
    color #777
    cursor not-allowed
    &::before
    &::after
      background-image repeating-linear-gradient(-45deg, _switchColor5 0 _switchSize2, _switchColor5 0, transparent 0, transparent _switchSize2 * 2)
    &::after
      background-color _colorG
  /*
  &:checked + label::before
  &.two-options + label::before
    background-color #4e667a - 30%
  */


.switch2
  position absolute // @note Label des éléments frères décalés si déclaration en relatif
  left -9999rem

.switch2 + label
  position relative
  display inline-block // @note Évite un clique involontaire par l'utilisateur car le label prend la règle 'width:100%' si 'display:block'
  margin-top 1em
  padding-left 6em

.switch2 + label::before
  content ''
  position absolute
  top -.5em
  left 0
  height 2.6em
  width 5.5em
  background-color _colorG - 30%
  border .1em solid transparent //_colorG
  border-radius .4em
  box-shadow inset 0 .2em .5em rgba(0, 0, 0, .2)
  //transition background-color .2s

.switch2[type=radio] + label::before
  border-radius 2em

//.switch:checked + label::before
//  background-color _color4

.switch2 + label::after
  content ''
  position absolute
  top -.4em
  left .1em
  width 2.4em
  height 2.4em
  background-color _color2
  border-radius .2em
  box-shadow 0 .2em .5em rgba(0, 0, 0, .3)
  transition left .2s
  background-image url('data:image/png;base64,')
  background-size 58px 61px
  background-repeat repeat

.switch2[type=radio] + label::after
  border-radius 50%

.switch2:checked + label::after
  left 3em

.switch2:focus-visible + label::before
  border-color _color5

.switch2:disabled + label
  position relative
  color #777
  cursor not-allowed

.switch2:disabled + label::before
.switch2:disabled + label::after
  background-image repeating-linear-gradient(-45deg, _switchColor5 0 _switchSize1, _switchColor5 0, transparent 0, transparent _switchSize1 * 2)

.switch2:disabled + label span::before
  color #777 !important

.switch2:disabled + label::after
  background-color _colorG

.switch2:checked + label span
.switch2:not(:checked) + label span::before
.switch2:checked + label span::after
  color _colorT

.switch2:not(:checked) + label span::before
  content attr(data-off)
  position absolute
  top 0 // @note Fixe le pseudo-élément si label sur plusieurs lignes.
  left 3.5em

.switch2:checked + label span::after
  content attr(data-on)
  position absolute
  top 0 // @note Fixe le pseudo-élément si label sur plusieurs lignes.
  left .8em
