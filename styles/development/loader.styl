_loaderSize = 5px // Les pixels donnent un rendus plus précis quelque soit l'échelle.
_loaderColor = Tomato

.loader
  --frame: 1s
  --color: _loaderColor

.loader
.loader::before
.loader::after
  border _loaderSize solid var(--color)
  border-top-color transparent
  border-bottom-color transparent
  border-radius 50%

.loader
  position relative
  width 6em
  height 6em
  animation anim-loader var(--frame) linear infinite
  &::before
  &::after
    content ''
    position absolute
  &::before
    inset 1px
    animation anim-loader calc(var(--frame) * 3) ease infinite // @note Multiplicateur arbitraire.
  &::after
    inset _loaderSize + 2
    animation anim-loader calc(var(--frame) * 1.51) ease infinite // @note Idem.

@keyframes anim-loader
  from
    transform rotate(0deg)
  to
    transform rotate(359deg)

@keyframes anim-loader
  from
    transform rotate(0deg)
  to
    transform rotate(359deg)
