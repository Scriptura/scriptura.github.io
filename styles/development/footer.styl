_footerColor1 = _colorG - 34%

.footer
  padding: 0 1em
  color: _colorT2
  background-color: _footerColor1
  //box-shadow: _shadow1

.footer a
  //font-variant: small-caps
  color: _colorT
  text-decoration: none

.footer a:focus
.footer a:hover
.footer a:active
  text-decoration: underline

.footer .wrap
  display: flex
  max-width: _wrap
  margin: 0 auto
  @media (max-width: _sizeXS)
    flex-direction: column
    align-items: center
    text-align: center
    line-height: 1
    //gap: _gap
    padding: _gap
  @media (min-width: _sizeXS)
    justify-content: space-between
    align-items: center

.footer .wrap > :first-child
  display: flex
  align-items: center

.footer .logo
.footer .logo svg
  width: 2em
  height: 2em

.footer .logo
  margin-right: 1em

.footer .wrap > :nth-child(2)
  text-align: center
