.audio
  display: none

.audio-player
  display: flex
  justify-content: space-between
  align-items: center
  gap: .5em
  width: 100%
  height: 3em
  background-color: _colorG + 7%
  border-radius: 2em
  box-shadow: box-shadow: _shadow17
  & > *
    align-self: center
  & button
    all: unset
    flex-shrink: 0
    display: grid
    height: 3em
    outline: none
    cursor: pointer
    & svg
      width: 1.2em
      height: 1.2em
      margin: auto
  & .audio-play-pause
    width: 3em
    background-color: _colorG + 14%
    border-radius: 50%
    &:focus
    &:hover
    &:active
      background-color: _color5
    &.active
      background-color: _color2
  & .audio-play-pause
  & .audio-volume
    & > :last-child
      display: none
    &.active
      & > :first-child
        display: none
      & > :last-child
        display: initial
  & .audio-volume
  & .audio-menu
    width: 2em
    &:focus
    &:hover
    &:active
      color: _color5
  & .audio-menu
    margin-right: 1em
  & .progress
    flex-grow: 1
    height: .3em
    background-color: _colorG + 14%
