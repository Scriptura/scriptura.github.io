.article
  display: grid
  & [class^=grid] *
    margin-top: 0
  @media (max-width: _sizeXS)
    & .wrapper::after
      content: '✻ ✻ ✻'
      display: block
      width: 100%
      height: 2em
      margin-top: 1em
      font-size: 2em
      text-align: center
      color: rgba(255, 255, 255, .2)
    & > footer
      margin-top: .5em
  @media (min-width: _sizeXS)
    & .wrapper
      padding: 4em 6em
      border-radius: _r2
      box-shadow: _shadow8
    & > footer > div
      position: sticky
      top: 2em
  @media (min-width: _sizeXS) and (max-width: _sizeL)
    & > footer
      padding: 2em 6em 0
  @media (min-width: _sizeS) and (max-width: _sizeL)
    & > *:not(header)
      max-width: 55em
  @media (min-width: _sizeL)
    column-gap: _gap * 2
    grid-template-columns: repeat(5, minmax(0, 1fr))
    & > header
      grid-column: span 5
    & .wrapper
      grid-column: span 3
    & > footer
      grid-column: span 2
      padding-top: 4.7em
  & > footer > div > div
    display: grid
    grid-template-columns: 3.5em minmax(0,1fr)
    grid-template-areas: 'aa tt' 'aa uu'
    & .avatar
      grid-area: aa
      --img: ''
      width: 3em
      aspect-ratio: 1
      background: #222 var(--img)
      background-size: cover
      border-radius: 50%
    & address
      grid-area: tt
      font-style: normal
      font-weight: bold
      font-variant: small-caps
    & > :last-child
      grid-area: uu
      margin-block: 0
  & .keywords
    list-style: none
    display: flex
    flex-wrap: wrap
    gap: (_gap / 2) (_gap / 2)
    font-size: .8em
    margin-block: 2em 0
    padding-left: 0
    & > :last-child
      margin-right: 0
    & li
      margin-bottom: .75em
      filter: drop-shadow(_shadow2)
    & a
      padding: .25em .5em .25em 1.25em
      white-space: nowrap
      background-color: _colorG - 28%
      clip-path: polygon(.75em 0, 100% 0, 100% 100%, .75em 100%, 0 50%)

.type-login
.type-register
  @media (min-width: _sizeXS)
    form
      padding: 4em 6em
      border-radius: _r2
      box-shadow: _shadow8
