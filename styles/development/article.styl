_articlesColor = _colorG

.article
  display grid
  & [class*=grid] > *
    margin-top 0
  & [class*=grid]
    margin-bottom -.75em

@media (max-width _sizeXS)

  .article > section::after
    content '✻ ✻ ✻'
    display block
    width 100%
    height 2em
    margin-top 1em
    font-size 2em
    text-align center
    color rgba(255, 255, 255, .2)
  .article > footer
    margin-top .5em

@media (min-width _sizeXS)

  .article
    & > section
      padding 4em 6em
      box-shadow _shadow8
    & > footer > div
      position sticky
      top 2em

@media (min-width _sizeXS) and (max-width _sizeL)

  .article > footer
    padding 2em 6em 0

@media (min-width _sizeS) and (max-width _sizeL)

  .article
    & > *:not(header)
      max-width 55em

@media (min-width _sizeL)

  .article
    column-gap _gap * 2
    grid-template-columns repeat(5, minmax(0, 1fr))
    & > header
      grid-column span 5
    & > section
      grid-column span 3
    & > footer
      grid-column span 2
      padding-top 4em
