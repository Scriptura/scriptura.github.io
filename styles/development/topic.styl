_topicColor1 = _colorG
_topicColor2 = _colorG + 27.5%

.topic
  display: grid
  grid-template-columns: minmax(0, 60em) minmax(0, 1fr)
  gap: _gap 0
  & > header
    grid-column: span 2
  & h1
    margin-bottom: .44em // @note Compense de manière "artisanale" le gap entre header et .wrapper @todo À revoir.
  & .wrapper
  & article
    background-color: _topicColor1
  & .wrapper
  & article
  & form
    grid-column: 1
    max-width: 55em
    border-radius: _r2
    box-shadow: _shadow8
    @media (max-width: _sizeXS)
      padding: 1em
    @media (min-width: _sizeXS) and (max-width: _sizeS)
      padding: 2em
    @media (min-width: _sizeS)
      padding: 4em 6em
      &:first-child
        margin-left: auto
      &:nth-child(odd)
        margin-left: auto
      &:nth-child(even)
        margin-right: auto
  & .sub-header
    margin-block: 2em 1em
  & .sub-header
  & article header
    display: grid
    grid-template-columns: 3.5em minmax(0,1fr)
    grid-template-areas: 'aa tt' 'aa uu'
  & article header
    position: relative
    margin-bottom: 1em
    padding-bottom: 1em
    border-bottom: 2px solid _colorG + 5%

  & article
    position: relative
  & .anchor
    position: absolute
    right: 2em
    color: _topicColor2
    &:focus
    &:hover
    &:active
      text-decoration: none
      color: _color5
    @media (max-width: _sizeXS)
      top: 1em
      right: 1em
    @media (min-width: _sizeXS) and (max-width: _sizeS)
      top: 2em
      right: 2em
    @media (min-width: _sizeS)
      top: 4em
      right: 2em
  & form
    width: 100%
  & .avatar
    grid-area: aa
    --img: ''
    width: 3em
    aspect-ratio: 1
    background: #222 var(--img)
    background-size: cover
    border-radius: 50%
  & address
    grid-area: tt
    font-style: normal
    font-weight: bold
    font-variant: small-caps
  & time
    grid-area: uu
  & .keywords
    list-style: none
    display: flex
    flex-wrap: wrap
    gap: (_gap / 2) (_gap / 2)
    font-size: .8em
    margin-block: .75em 0
    padding-left: 0
    & > :last-child
      margin-right: 0
    & li
      margin-bottom: .75em
      filter: drop-shadow(_shadow2)
    & a
      padding: .25em .5em .25em 1.25em
      white-space: nowrap
      background-color: _colorG - 28%
      clip-path: polygon(.75em 0, 100% 0, 100% 100%, .75em 100%, 0 50%)

