_topicColor1 = _colorG

.topic
  display: grid
  gap: _gap 0
  & .wrapper
    max-width: 55em
  & article
    background-color: _topicColor1
    border-radius: _r2
    max-width: 55em
    @media (min-width: _sizeXS)
      padding: 4em 6em
      box-shadow: _shadow8
    &:nth-child(4n+1)
      margin-left: 0
    &:nth-child(4n+4)
      margin-inline: auto
    &:nth-child(4n+5)
      margin-left: auto
    &:nth-child(4n+6)
      margin-inline: auto
  & address
    font-variant: small-caps
