hr[data-hr]
.decorative-hr hr
  display block
  //clear both
  width 100%
  height 2em
  margin 2em 0
  //font-family _fontList2
  line-height 1
  //letter-spacing .5em
  background-image none

hr[data-hr]::after
.decorative-hr hr::after
  content attr(data-hr)
  display block
  width 100%
  height 100%
  font-size 2em
  text-align center
  color rgba(255, 255, 255, .2)

.decorative-hr hr::after
  content '✻ ✻ ✻'

//:lang(grc) // @note Grec ancien (grec moderne : 'el')

:lang(he) // @note Hébreu
    direction rtl

.verse
  color _color2

.links p a:not([href^="#"])::after // Liens internes, sauf les ancres.
  content ' ↩' //⤶

.links p a[href*="//"]::after // @note Liens externes.
  content ' ↗'

.justify
  hyphens auto

@media (min-width _sizeXS)

  .justify
    text-align justify
