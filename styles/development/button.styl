_buttonColor2 = _color2
_buttonColor3 =  _color2
_buttonColor4 = _color5

// @note Toujours privilégier l'élément <button> sur l'élément <input type=button> car il permet de réaliser des rendus plus complexe en acceptant des balises html.

//[class*=button] // @deprecated Espace de nom trop généraliste. Conflits avec les styles de certaines classes de plugins tels que Leaflet.
.button
.round-button
  --color: _colorT
  --bg-color: _buttonColor2
  position relative
  color var(--color)
  //text-shadow 3px 3px 2px rgba(0, 0, 0, .2)
  //text-transform uppercase
  background-clip text
  background var(--bg-color) linear-gradient(to top, rgba(0, 0, 0, .2), rgba(255, 255, 255, .1))
  border none
  box-shadow _shadow6
  transition all .2s linear
  transition-property translate, box-shadow
  outline 0
  user-select none
  &::before
    content ''
    position absolute
    inset .2em
    border 1px dashed rgba(255, 255, 255, .3) //rgba(0, 0, 0, .3)
  &:focus-visible
  &:hover
    box-shadow _shadow6
    transform translateY(-.1rem) // en rem, ne dépend pas de la taille du bouton
  &:active
    box-shadow _shadow7
    transform translateY(.05em) // en em, dépend de la taille du bouton
  &:focus-visible
    background-color _buttonColor4
  //& svg
  //  filter drop-shadow(3px 3px 2px rgba(0, 0, 0, .2))

.button
  padding .5em 1em
  line-height 2
  white-space nowrap
  text-overflow ellipsis
  border-radius .5em
  &::before
    border-radius .4em
  & + .button-test
    margin-left .5em // @note Espace entre deux bouttons déclarés en inline-block.

.round-button
  height 4em
  width 4em
  border-width .25em
  border-radius 50%
  & svg
    height 1.5em
    width 1.5em
    margin auto
    //padding 0
  &::before
    border-radius 50%
  & + .round-button-test
    margin-left .5em // @note Espace entre deux bouttons déclarés en inline-block.
