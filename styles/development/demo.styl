_demoColor1 = _colorG + 7%

[class*=demo-items]
  --itemHeight 2em
  & > *
    box-sizing border-box
    padding 1em
    background-color _demoColor1
    box-shadow _shadow5
    & code
      margin-left .2em
      background-color rgba(0, 0, 0, .2)

.demo-items-empty > *
  min-height var(--itemHeight)

.demo-item
  box-sizing border-box
  padding 1em
  background-color _demoColor1
  box-shadow _shadow5

.demo-counter
  & > *
    counter-increment: div
  & > ::before
    content: counter(div) '.'
    display: inline
  & > * :first-child
    display: inline

