_sizeT = 32.01em

.topic
  --img: url(/medias/images/uploads/dawid-zawila-w300.webp)
  position: relative
  display: grid
  grid-template-rows: repeat(2, auto)
  @media (max-width: _sizeT)
    grid-template-columns: minmax(0, 1fr)
    grid-template-areas: 'ttt' 'uuu'
  @media (min-width: _sizeT)
    grid-template-columns: 4em minmax(0, 1fr)
    grid-template-areas: 'aaa ttt' 'aaa uuu'
  gap: 0 _gap
  & > a // @note Permet à tout l'élément d'être cliquable (simulation d'imbrication des liens)
    position: absolute
    inset: 0
    z-index: 1
    &:focus
    &:hover
    &:active
      & ~ * h2 a
        text-decoration: underline
  & > * a // @note Rétablit le clique des liens de base.
    position: relative
    z-index: 3
  & .aaa
    grid-area: aaa
    @media (max-width: _sizeT)
      display: none
    @media (min-width: _sizeT)
      width: 3.5em
      aspect-ratio: 1
      margin: auto
      border-radius: 50%
      background: #222 var(--img)
      background-size: cover
  & > .ttt
    grid-area: ttt
    display: flex
    //flex-wrap: nowrap
    justify-content: space-between
    gap: 0 _gap
    & > *
      margin-bottom: .15em
    & p
      flex-shrink: 0
  & .uuu
    grid-area: uuu
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    align-items: baseline
    gap: 0 _gap
    & > *
      margin-top: .15em
    & > :last-child
      display: flex
      flex-wrap: wrap
      gap: (_gap / 2) (_gap / 2)
      font-size: .8em
      & a
        padding: .25em .5em .25em 1.25em
        white-space: nowrap
        background-color: #333
        clip-path: polygon(.75em 0, 100% 0, 100% 100%, .75em 100%, 0 50%)
  & h2
    //all: unset
    //font-variant: small-caps
    //font-weight: normal
    font-size: 1em
  &
    margin-block: .75em 0
