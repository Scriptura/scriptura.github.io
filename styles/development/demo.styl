_demoColor1 = _colorG + 7%

[class*=demo-items]
  --itemHeight 2em
  & > *
    box-sizing border-box
    padding 1em
    background-color _demoColor1
    box-shadow _shadow5
    & code
      margin-left .2em
      background-color rgba(0, 0, 0, .2)

.demo-items-empty > *
  min-height var(--itemHeight)

.demo-item
  box-sizing border-box
  padding 1em
  background-color _demoColor1
  box-shadow _shadow5

.demo-counter
  & > *
    counter-increment div
  & > ::before
    display inline
    content counter(div) '.'
  & > * :first-child
    display inline

.type-styleGuide
  //grid-template-columns minmax(_gap, 1fr) minmax(0, _wrap + 12) minmax(_gap, 1fr)
  & main > .ribbon-content
    /*
    background-image linear-gradient(-135deg, rgba(255, 255, 255, .02), transparent 50%)
    background-size 15em 15em
    background-repeat  no-repeat
    background-position 100% 0%
    */
    @media (max-width _sizeXS)
      padding 1em
    @media (min-width _sizeXS)
      padding 2em 3em
      box-shadow _shadow8
    @media (min-width _sizeS)
      padding 4em 6em
