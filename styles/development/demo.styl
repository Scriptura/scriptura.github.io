_demoColor1 = _colorG + 7%

[class*=demo-items]
  --itemHeight 2em
  > *
    box-sizing border-box
    padding 1em
    background-color _demoColor1
    box-shadow _shadow5
    code
      margin-left .2em
      background-color rgba(0, 0, 0, .2)

.demo-items-empty > *
  min-height var(--itemHeight)

.demo-item
  box-sizing border-box
  padding 1em
  background-color _demoColor1
  box-shadow _shadow5

.demo-counter
  > *
    counter-increment div
  > ::before
    display inline
    content counter(div) '.'
  > * :first-child
    display inline

.type-styleGuide main > .ribbon-content
  background-image linear-gradient(-45deg, rgba(255, 255, 255, .05), transparent 50%)
  background-size 15em 15em
  background-repeat  no-repeat
  background-position 100% 100%
