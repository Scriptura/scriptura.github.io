_demoColor1 = _colorG + 7%
_demoColorDeg = 15
_demoColorDeviation = 15

[class*=demo-items]
  --itemHeight 2em
  & > *
    box-sizing border-box
    padding 1em
    background-color _demoColor1
    box-shadow _shadow5
    & code
      margin-left .2em
      background-color rgba(0, 0, 0, .2)

.demo-items-empty > *
  min-height var(--itemHeight)

.demo-item
  box-sizing border-box
  padding 1em
  background-color _demoColor1
  box-shadow _shadow5

for _i in 1...4
  .demo-items-color > :nth-child({_i}n)
    _c = unit(_demoColorDeg, deg) + _i * _demoColorDeviation - _demoColorDeviation
    background-color: hsl(_c 100% 50%)

.demo-counter
  & > *
    counter-increment: div
  & > ::before
    content: counter(div) '.'
    display: inline
  & > * :first-child
    display: inline

.type-styleGuide
  & main > section
    @media (max-width: _sizeS)
      position: relative
      padding: 0
    @media (min-width: _sizeS)
      padding: 4em 6em
      box-shadow: _shadow8
    &.ribbon-content::before
      @media (max-width: _sizeS)
        content: ''
        position: absolute
        top: -.5em
        right: -.5em
        width: 14em
        height: 14em
        background-image: linear-gradient(-135deg, rgba(255, 255, 255, .03), transparent 50%)
        background-size: 15em 15em
        background-repeat:  no-repeat
        background-position: 100% 0%
    & > .ribbon-top-right
      @media (max-width: _sizeS)
        transform: translate(2.85em, .9em) rotate(45deg) !important

